rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection
    match /users/{uid} {
      allow read, write: if request.auth != null;
    }

    // Requests collection
    match /requests/{reqId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
      
      // Bids subcollection
      match /bids/{bidId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null;
      }
    }

    // Warehouse requests collection
    match /warehouseRequests/{reqId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth.uid == resource.data.customerId;
    }

    // Warehouse quotes collection
    match /warehouseQuotes/{quoteId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth.uid == resource.data.partnerId;
    }

    // Top-level bids collection (파트너 견적)
    match /bids/{bidId} {
      allow read, write: if request.auth != null;
    }

    // Notifications collection
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null;
    }

    // Companies collection
    match /companies/{companyId} {
      allow read, write: if request.auth != null;
    }

    // Completed quotes collection
    match /completedQuotes/{completedQuoteId} {
      allow read, write: if request.auth != null;
    }

    // Files collection (for file uploads)
    match /files/{fileId} {
      allow read, write: if request.auth != null;
    }

    // Matches collection
    match /matches/{matchId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // UserTokens collection
    match /userTokens/{uid} {
      allow read, write: if request.auth.uid == uid;
    }

    // Chats (고객/파트너 채팅)
    match /chats/{chatId} {
      allow read, write: if request.auth != null;
      
      // Chat messages subcollection
      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }
  }
}